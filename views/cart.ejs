<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/user_homepage.css">
    <link rel="stylesheet" href="/css/product_details.css">
    <link rel="stylesheet" href="/css/cart.css">
    <title>cart</title>
</head>
<body>
    <header>
        <img class="logo" src="/images/jamcart_logo.svg" style="width: 97px;">
        <div class="menu">
            <a href="#">
                <img class="cart_logo" src="/images/cart_logo.svg" style="width: 30px;">
            </a>
            <a href="/login">
                <h6>Logout</h6>
            </a>
        </div>
    </header>
    
    <section class="main-display">

        <!-- <h6>User name: <%= user1.userName %> </h6> -->
        
        <table>
            <thead>
                <tr>
                    <th>Sl No.</th>
                    <th>Product Name</th>
                    <th>Product Price</th>
                </tr>
            </thead>
            <tbody>
                <% var i=1, totalPrice=0; %>
                <% if( user1.cart.length > 0){ %>
                    <% user1.cart.forEach(( product) => { %>
                        <tr>
                            <td> <%= i %> </td>
                            <td> <%= product.name %> </td>
                            <td> <%= product.price %> </td>
                        </tr>
                        <% totalPrice= totalPrice + Number(product.price) %>
                        <% i++; %>
                    <% }) %>
                <% }else{ %>
                    <tr></tr>
                <% } %>
                <tr>
                    <td></td>
                    <td></td>
                    <td> Total Price: <%= totalPrice %> </td>
                </tr>
            </tbody>
        </table>
    </section>

</body>
</html>